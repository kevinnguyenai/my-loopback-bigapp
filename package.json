{
  "name": "my-loopback-bigapp",
  "description": "Monorepo to build typescript app",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Kevin Nguyen <kevin.nguyen.ai@gmail.com>",
  "copyright.owner": "Kevin Nguyen <kevin.nguyen.ai@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "node packages/utils/bin/compile-package -b",
    "build:lerna": "lerna run build --include-dependencies",
    "prerelease": "npm run build:full && cross-env CI=1 mocha && npm run lint",
    "release": "cross-env CI=1 lerna version && lerna publish from-git --yes",
    "clean": "lerna run clean",
    "build:full": "npm ci --ignore-scripts && lerna bootstrap --ci && npm run clean && npm run build",
    "update-all-deps": "npm update && lerna exec -- npm update",
    "start": "lerna run start --stream",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "eslint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier:cli": "",
    "prettier:check": "prettier --check .",
    "prettier:fix": "",
    "test": "echo \"Null application \"",
    "test:full": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "yarn run lint",
    "pretest": "npm run clean && npm run bootstrap && npm run build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "enzyme-to-json": "^3.4.3",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-eslint-plugin": "^3.6.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "lint-staged": "^11.2.6",
    "markdown-table": "^3.0.1",
    "open-cli": "^6.0.1",
    "react-app-rewired": "^2.1.8",
    "ts-jest": "^27.0.7"
  },
  "dependencies": {
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.9",
    "@types/react": "17.0.35",
    "@types/react-dom": "17.0.11",
    "customize-cra": "^1.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "typescript": "~4.4.3",
    "uuid": "^8.3.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "packages/*/src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "prettier/react",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": [
        "error"
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "error"
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".tsx"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".ts",
            ".tsx"
          ]
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  }
}
